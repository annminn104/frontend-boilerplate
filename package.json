{
  "name": "frontend-boilerplate",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo run build --filter='./packages/*' --color --parallel",
    "clean": "turbo clean && pnpm clean:root",
    "clean:root": "rimraf ./.cache node_modules",
    "deps:check": "pnpm dlx npm-check-updates@latest --configFileName .ncurc.yml --deep --mergeConfig",
    "deps:update": "pnpm dlx npm-check-updates@latest --configFileName .ncurc.yml -u --deep --mergeConfig && pnpm install",
    "dev": "turbo dev",
    "format": "turbo format && pnpm format:package-json",
    "format:package-json": "sort-package-json {apps,packages}/*/package.json",
    "lint": "npm-run-all --parallel lint:turbo lint:secrets lint:md lint:styles format:package-json",
    "lint:browsers": "browserslist",
    "lint:commits": "pnpm commitlint --from HEAD~1 --to HEAD --verbose",
    "lint:dist": "turbo run lint:dist --parallel",
    "lint:md": "markdownlint --fix **/*.md --ignore '**/node_modules/**' --ignore '**/CHANGELOG.md'",
    "lint:packages": "npm-run-all --parallel --print-label --continue-on-error lint:packages:*",
    "lint:packages:mismatches": "syncpack list-mismatches",
    "lint:packages:semver": "syncpack lint-semver-ranges",
    "lint:secrets": "secretlint **/*",
    "lint:size": "turbo run lint:size --parallel",
    "lint:staged": "lint-staged --allow-empty",
    "lint:styles": "stylelint **/*.css --fix",
    "lint:turbo": "turbo lint --parallel",
    "lint:types": "turbo lint:types --parallel",
    "prepare": "is-ci || husky install",
    "prettier:fix": "prettier --write \"**/*.{ts,tsx,md,js}\"",
    "test": "jest",
    "test:e2e": "turbo run test:e2e --concurrency=1",
    "test:unit": "turbo run test --concurrency=1 "
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@fe-boilerplate/commitlint-config": "workspace:*",
    "@fe-boilerplate/eslint-config": "workspace:*",
    "@fe-boilerplate/lint-staged-config": "workspace:*",
    "@fe-boilerplate/secretlint-config": "workspace:*",
    "@fe-boilerplate/stylelint-config": "workspace:*",
    "@fe-boilerplate/tsconfig-config": "workspace:*",
    "@fe-boilerplate/markdownlint-config": "workspace:*",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "rimraf": "^6.0.1",
    "secretlint": "^9.0.0",
    "sort-package-json": "^2.10.1",
    "stylelint": "16.10.0",
    "turbo": "^2.2.3",
    "typescript": "5.5.4",
    "yaml-lint": "^1.7.0"
  },
  "engines": {
    "node": ">=18",
    "npm": "Please use pnpm",
    "yarn": "Please use pnpm",
    "pnpm": ">=9.5.0"
  },
  "packageManager": "pnpm@9.5.0",
  "dependencies": {
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "react": "^18.3.1"
  }
}
