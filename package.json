{
  "name": "frontend-boilerplate",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo run build --filter='./packages/*' --color --parallel",
    "clean": "run-p clean:global-cache clean:turbo",
    "clean:turbo": "turbo clean --parallel",
    "clean:global-cache": "rimraf ./.cache",
    "dev": "turbo dev",
    "format": "turbo format && pnpm format:package-json",
    "format:package-json": "sort-package-json packages/configs/*/package.json {apps,packages}/*/package.json",
    "commit": "git-cz",
    "cs": "changeset",
    "cs:publish": "changeset publish",
    "cs:release": "turbo build lint test && changeset version && changeset publish",
    "cs:version": "changeset version",
    "deps:check": "pnpm dlx npm-check-updates@latest --configFileName .ncurc.yml --deep --mergeConfig",
    "deps:update": "pnpm dlx npm-check-updates@latest --configFileName .ncurc.yml -u --deep --mergeConfig && pnpm install",
    "preinstall": "npx only-allow pnpm",
    "lint": "run-p lint:turbo lint:md lint:js lint:secrets lint:package-json",
    "lint:commits": "pnpm commitlint --from HEAD~1 --to HEAD --verbose",
    "lint:fix": "turbo lint:fix && pnpm lint:package-json",
    "lint:js": "eslint --fix **/*.js",
    "lint:md": "markdownlint --fix **/*.md --ignore '**/node_modules/**' --ignore '**/CHANGELOG.md'",
    "lint:package-json": "sort-package-json package.json packages/*/package.json packages/**/*/package.json",
    "lint:secrets": "secretlint **/*",
    "lint:turbo": "turbo lint --parallel",
    "lint:types": "turbo lint:types --parallel",
    "lint:dist": "turbo lint:dist --parallel",
    "prepare": "is-ci || husky install",
    "prettier:fix": "prettier --write .",
    "test": "jest",
    "test:e2e": "turbo run test:e2e --concurrency=1",
    "test:unit": "turbo run test --concurrency=1 "
  },
  "dependencies": {
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@fe-boilerplate/commitlint-config": "workspace:*",
    "@fe-boilerplate/eslint-config": "workspace:*",
    "@fe-boilerplate/lint-staged-config": "workspace:*",
    "@fe-boilerplate/markdownlint-config": "workspace:*",
    "@fe-boilerplate/secretlint-config": "workspace:*",
    "@fe-boilerplate/stylelint-config": "workspace:*",
    "@fe-boilerplate/tsconfig-config": "workspace:*",
    "@types/prettier": "3.0.0",
    "@types/shell-quote": "1.7.5",
    "actionlint": "2.0.6",
    "commitizen": "4.3.0",
    "eslint": "8.57.0",
    "is-ci": "3.0.1",
    "lint-staged": "^15.2.10",
    "markdownlint": "0.34.0",
    "markdownlint-cli": "0.39.0",
    "npm-run-all2": "6.1.2",
    "prettier": "3.3.3",
    "rimraf": "^6.0.1",
    "secretlint": "8.2.3",
    "shell-quote": "1.8.2",
    "sort-package-json": "^2.10.1",
    "stylelint": "16.10.0",
    "turbo": "^2.2.3",
    "typescript": "5.7.3"
  },
  "peerDependencies": {
    "actionlint": "2.0.6",
    "markdownlint": "0.34.0",
    "secretlint": "8.2.3",
    "sort-package-json": "2.14.0"
  },
  "packageManager": "pnpm@9.15.5",
  "engines": {
    "node": ">=20",
    "npm": "Please use pnpm",
    "pnpm": ">=9.5.0",
    "yarn": "Please use pnpm"
  }
}
