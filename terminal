# Create new Next.js project with TypeScript
pnpm create next-app@latest apps/landing --typescript --tailwind --app --src-dir --import-alias "@/*"

# Navigate to project directory
cd apps/landing

# Install dependencies
pnpm add @prisma/client @trpc/client @trpc/server @trpc/react-query @clerk/nextjs @supabase/supabase-js zod @tanstack/react-query superjson

# Install dev dependencies
pnpm add -D prisma @types/node typescript @types/react @types/react-dom eslint eslint-config-next
